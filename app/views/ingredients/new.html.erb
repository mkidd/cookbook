<h1>Ingredient#new</h1>
<p>Find me in app/views/ingredient/new.html.erb</p>
<%= form_for([@recipe, @recipe.ingredients.new], :remote => true, :html => {:style => 'display: none;'}) do |f| %>
  <div class="field">
    <%= f.label :food %><br />
